{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="user">User</label>
        {{input class="form-control" value=user id="user"}}
      </div>
      <div class="form-group">
        <label for="content">Comment</label>
        {{textarea class="form-control" value=content id="content"}}
      </div>
      <button class="btn btn-success"{{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
