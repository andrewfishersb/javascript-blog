{{#if blogForm}}
  <form>
    {{input class="form-control" value=title id='title' placeholder="Enter a title..."}}
    {{input class="form-control" value=user id='user' placeholder="Enter username..."}}
    {{textarea class="form-control" value=content id='content' placeholder="Enter content..."}}
    {{input class="form-control" value=cateogry id='cateogry' placeholder="Enter a cateogry..."}}
    {{input class="form-control" value=tag id='tag' placeholder="Enter a tag..."}}
    <button {{action 'savePost'}}>Submit</button>
  </form>
{{else}}
  <button {{action "postBlogShown"}}>Add new blog post</button>
{{/if}}
